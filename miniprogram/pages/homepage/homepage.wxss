/**index.wxss**/

/* 搜索框 */
.head{
  width: 100%;
  height: 40rpx;
}
.searchRoot {
  background: #FFE2C8;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}


.searchInput {
  flex: 1;
  height: 80rpx; 
  padding-left: 20rpx;
  border: 1px solid #f4c903;
  border-radius: 30rpx;
}

.searchImg {
  width: 80rpx;
  height: 80rpx;
  margin: 0 15rpx;
}

.category-panel1 {
  height: 45vh;
  width: auto;
  display: flex;
  color: #666;
  flex-direction: column;
  font-size: 11px;
  justify-content: space-around;
  align-items: center;
}

.category-panel2 {
  height: 100%;
  width: 100%;
  display: flex;
  color: #666;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.category-item {
  display: flex;
  width: 25vw;
  text-align: center;
  flex-direction: column;
}

.category-item-image {
  width: 20vw;
  height: 20vw;
  padding: 10rpx;
  align-self: center;
}


.kf_button {
  background-color: rgba(255, 255, 255, 0);
  padding: 0px 0px 0px 0px;
  border: 0px;
}

.kf_button::after {
  border: 0px;
}

.category-item-text {
  text-align: center;
  font-size: medium;
}

.category-item-text1 {
  margin-top: 0px;
}
page{
  background-color:#FFE2C8;
  height: 100%;
  font-size: x-large;
  font-family: cursive; 
}