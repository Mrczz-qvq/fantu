.swiper-item{
  display: block;
}
.slide-image {
  width: 100%;
}
.text1{
  display:flex;
align-items:center;
justify-content:center;
font-size: 30px;
padding-top: 6px;
padding-bottom: 6px;
}
.tname{
  height: 40px;
  line-height: 40px; 
}
.swiper {
  width: 100%;
}
.goods_title {
  font-size: 14px;
  line-height: 20px;
  color: black;
  padding: 10px;
  height: 40px;
  padding-right: 80px;
  position: relative;
}
.goods_infor_top {
  background-color: #FFF;
}

.goods_collect_btn {
  height: 40px;
  width: 70px;
  position: absolute;
  right: 0;
  top: 10px;
  border-left: 1px solid #a5E5E5;
  text-align: center;
  font-size: 12px;
  line-height: 14px;
}
.goods_collect_img {
  width: 24px;
  height: 24px;
}
.goods_infor_pre {
  margin-top: 10px;
  background-color:whitesmoke;
  padding: 10px;
  min-height: 40px;
}
.goods_infor_txt {
  position: relative;
  padding-left: 50px;
  font-size: 13px;
  line-height: 18px;
}
.goods_infor_raw {
  margin-top: 10px;
  background-color: #FFF;
  padding: 10px;
}
.goods_infor_item {
  font-size: 13px;
  line-height: 18px; 
}
.goods_infor_item text  {
  display: inline-block;
  width: 90px;
}
.goods_detail {
  padding: 0 0px;
  margin-top: 10px;
  background-color: #FFF;
}
.goodslist {
  padding: 0 0px;
  margin-top: 10px;
  background-color: #FFF;
  display: flex;
  /*row 横向  column 列表  */
  width: 100%;
  flex-direction: row;
}
.list2 {
  padding-top: 6px;
  padding-right: 6px;
  padding-bottom: 6px;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}
.goods_detail_title {
  padding: 10px 0;
  font-size: 14px;
}
.goodslistmsg{
  height: 100px;
  width: 120px;
  padding-top: 6px;
  padding-right: 6px;
  padding-bottom: 6px;
  padding-left: 8px;
  padding-right: 50px;
}
.goodsname{
  display:flex;
align-items:center;
justify-content:center;
padding-top: 10px;
}
.goodsp{
  display:flex;
align-items:center;
justify-content:center;
padding-top: 20px;
}
.goods_bottom {
  height: 50px;
}
.goods_bottom_btn {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 50px;
  z-index: 99;
  background-color: #FFF;
  border-top: 1px solid #E5E5E5;
}
.goods_one {
  width: 25%;
  float: left;
  height: 50px;
}
.goods_half_half {
  width: 25%;
  float: left;
  height: 50px;
  font-size: 12px;
  line-height: 50px;
  text-align: center;
  color: #FFF;
}
.green {
  background-color: #69C3AA;
}
.blue {
  background-color: #00aaef;
}

page {
  background:#ebeae9;
}